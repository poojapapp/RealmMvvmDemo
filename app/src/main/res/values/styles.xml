<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mandali</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!--bottom sheet theme-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="NavButtonPadding" parent="@android:style/Widget.ActionButton">
        <item name="android:paddingStart">16dp</item>
        <item name="android:actionBarStyle">@style/Widget.MaterialComponents.BottomAppBar</item>
    </style>

    <!-- AlertDialog theme-->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/blackShadeDark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
